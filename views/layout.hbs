      <!-- End Navbar -->
      {{{body}}}
      <footer class="footer">
        <div class="container-fluid">
          <nav>
            <p class="copyright text-center">
              ©
              <script>
                document.write(new Date().getFullYear());
              </script>
              <a href="http://www.creative-tim.com">Creative Tim</a>, made
              with love for a better web
            </p>
          </nav>
        </div>
      </footer>

      <div class="modal fade" id="changeProfileInfo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Thông tin cá nhân</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="profileForm">
                <div class="text-center">
                  <div id="img-preview-block" class="rounded img-circle avatar avatar-original center-block"
                    style="background-size:cover; 
                background-image:url({{#if user.profilePicture}}{{user.profilePicture}}{{else}}/images/default-avatar.png{{/if}})"></div>
                  <br>
                  <span class="btn btn-link btn-file">Đổi ảnh đại diện<input type="file" id="upload-img" class="imgur"
                      accept="image/*" data-max-size="5000"></span>
                </div>

                {{!-- <div class="text-center">
                  <img src="{{#if user.profilePicture}}{{user.profilePicture}}{{else}}/images/default-avatar.png{{/if}}"
                    class="rounded" style="width: 150px;" alt="...">
                </div> --}}
                <input type="text" id="urlImage" class="d-none" name="urlImage">

                <div class="form-group">
                  <label for="adminName" class="col-form-label">Họ và tên</label>
                  <input type="text" class="form-control" id="adminName" name="fullname" value="{{user.fullname}}">
                </div>

                <div class="form-group">
                  <label for="adminBirthday">Ngày sinh</label>
                  <input name="birthday" type="date" id="adminBirthday" class="form-control" value="{{user.birthday}}">
                </div>

                <div class="form-group">
                  <label for="message-text" class="col-form-label">Giới thiệu</label>
                  <textarea class="form-control" id="adminBio" name="biography">{{user.biography}}</textarea>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
              <button type="reset" class="btn btn-secondary" data-dismiss="modal">Khôi phục</button>
              <button id="updateProfile" type="button" class="btn btn-primary">Cập nhật thông tin</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
